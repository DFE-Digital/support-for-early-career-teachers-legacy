<% content_for :before_content, govuk_back_link(text: "Back", href: dashboard_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @participant, url: guidance_question_path, method: :post do |form| %>
      <%= form.govuk_error_summary %>

      <%= form.govuk_radio_buttons_fieldset :viewed_guidance, legend: { text: "Before you start, would you like a brief summary of the programme?", tag: "h1", size: "xl" } do %>
        <%= form.govuk_radio_button :show_guidance_speedbump, "view guidance", label: { text: "Yes, that would be useful"} %>
        <%= form.govuk_radio_button :show_guidance_speedbump, "skip guidance", label: { text: "No, I know what to expect"} %>
      <% end %>

      <%= form.govuk_submit "Continue" %>

    <% end %>
 </div>
</div>
