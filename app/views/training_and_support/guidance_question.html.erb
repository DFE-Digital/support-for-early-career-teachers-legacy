<% content_for :before_content, govuk_back_link(text: "Back", href: dashboard_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @guidance_speedbump_form, url: guidance_question_path, id: "view-guidance-speedbump-form", method: :post do |form| %>
      <%= form.govuk_error_summary %>

      <%= form.govuk_collection_radio_buttons(
        :view_guidance_option,
        @guidance_speedbump_form.guidance_speedbump_options,
        :id,
        :name,
        legend: { text: "Before you start, would you like a brief summary of the programme?", tag: "h1", size: "xl" }) %>
     <%= form.govuk_submit "Continue" %>
    <% end %>
 </div>
</div>
