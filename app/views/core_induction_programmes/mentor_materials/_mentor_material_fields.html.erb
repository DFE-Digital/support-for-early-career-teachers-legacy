<%= f.govuk_error_summary %>
<% if @course_lessons %>
  <%= f.govuk_collection_select(
        :course_lesson_id,
        @course_lessons,
        :id,
        :module_and_lesson,
        label: { text: "Which lesson would you like to assign the mentor material to?" , class: "govuk-heading-m" }
      ) %>
<% end %>
<%= f.govuk_text_field :title, label: { text: "Mentor material title" }, value: @mentor_material.title %>

<%= f.govuk_number_field(
      :completion_time_in_minutes,
      label: { text: "Time in minutes"},
      width: 4, hint: { text: " For example, 90"},
      value: @mentor_material.completion_time_in_minutes) %>

<%= f.govuk_submit "Save" %>
